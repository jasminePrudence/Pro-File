    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "jinja": true,
            "console": "integratedTerminal"  // Ajoute cette ligne pour utiliser le terminal intégré de VSCode

        }
    ]
